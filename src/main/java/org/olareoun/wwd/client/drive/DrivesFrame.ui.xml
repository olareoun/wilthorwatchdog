<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<g:VerticalPanel spacing='5'>
		<g:HorizontalPanel>
			<g:Button ui:field='searchButton' enabled="true">Search Drives
			</g:Button>
			<g:DecoratorPanel>
				<g:FlexTable ui:field='drivesTable' cellPadding='3'
					styleName='drivesTable'></g:FlexTable>
			</g:DecoratorPanel>
			<g:Button ui:field='changeButton' enabled="true">Change Permissions
			</g:Button>
		</g:HorizontalPanel>
	</g:VerticalPanel>

</ui:UiBinder>
